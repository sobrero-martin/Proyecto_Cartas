@inject SesionUsuario Sesion
@inject NavigationManager navHttp

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Proyecto_Cartas.Server</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="menuPrincipal" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Menú Principal
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="inventario" Match="NavLinkMatch.All">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Inventario
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="tienda" Match="NavLinkMatch.All">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Tienda
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="https://localhost:7192/swagger">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Swagger
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <button class="nav-link" @onclick="CerrarSesion">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Cerrar sesión
            </button>
        </div>
    </nav>
</div>

@code {
    private void CerrarSesion()
    {
        Sesion.UsuarioId = 0;
        navHttp.NavigateTo("/");
    }
}